{
  "name": "pizza-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "mobx": "^5.15.4",
    "mobx-react": "^6.2.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "STATUS=0; yarn lint:css || STATUS=$?; yarn lint:ts || STATUS=$?; exit $STATUS",
    "lint:fix": "STATUS=0; yarn lint:css:fix || STATUS=$?; yarn lint:ts:fix || STATUS=$?; exit $STATUS",
    "lint:ts": "yarn eslint 'src/**/*.{tsx,ts,jsx,js}'",
    "lint:ts:fix": "yarn eslint 'src/**/*.{tsx,ts,jsx,js}' --fix",
    "lint:css": "yarn stylelint 'src/**/*.css'",
    "lint:css:fix": "yarn stylelint 'src/**/*.css' --fix"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-router-dom": "^5.1.5",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.19.0",
    "stylelint": "^13.3.3",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "~3.7.2",
    "typescript-plugin-css-modules": "^2.3.0"
  }
}
